{
  "manifest_version": 3,
  "name": "PhishGuard Advanced (Gmail)",
  "version": "1.0.0",
  "description": "Detects likely phishing emails in Gmail using heuristic checks and link analysis.",
  

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  }
}
